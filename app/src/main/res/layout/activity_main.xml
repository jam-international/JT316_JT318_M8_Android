<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@drawable/border2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/border2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border2">

                            <Button
                                android:id="@+id/button_load"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/tasto_load_prog"
                                android:onClick="On_click_Load"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView_nomeprog"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginStart="16dp"
                                android:text="Prog name:"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                app:layout_constraintStart_toEndOf="@+id/button_load"
                                app:layout_constraintTop_toTopOf="@+id/button_load" />

                            <TextView
                                android:id="@+id/textView_nomeprog_val"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginStart="12dp"
                                android:text=".............."
                                android:textSize="18sp"
                                app:layout_constraintStart_toEndOf="@+id/textView_nomeprog"
                                app:layout_constraintTop_toTopOf="@+id/textView_nomeprog" />

                            <TextView
                                android:id="@+id/textView_folder"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:text="Folder:"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="@+id/textView_nomeprog"
                                app:layout_constraintTop_toBottomOf="@+id/textView_nomeprog" />

                            <TextView
                                android:id="@+id/textView_folder_val"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginStart="28dp"
                                android:text=".............."
                                android:textSize="18sp"
                                app:layout_constraintStart_toEndOf="@+id/textView_folder"
                                app:layout_constraintTop_toTopOf="@+id/textView_folder" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".3
"
                            android:background="@drawable/border2">

                            <Button
                                android:id="@+id/btn_test_cuci"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginBottom="32dp"
                                android:background="@drawable/ic_test_cucitura"
                                app:layout_constraintBottom_toTopOf="@+id/textView_errore"
                                app:layout_constraintStart_toStartOf="parent" />

                            <Button
                                android:id="@+id/btn_sgancio_ago"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/ic_sblocca_ago"
                                app:layout_constraintStart_toEndOf="@+id/btn_test_cuci"
                                app:layout_constraintTop_toTopOf="@+id/btn_test_cuci" />

                            <TextView
                                android:id="@+id/textView_speedT1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="20dp"
                                android:text="Speed"
                                android:textColor="@color/colorPrimary"
                                android:textSize="36sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView_val_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:text="....."
                                android:textSize="36sp"
                                app:layout_constraintStart_toEndOf="@+id/textView_speedT1"
                                app:layout_constraintTop_toTopOf="@+id/textView_speedT1" />

                            <TextView
                                android:id="@+id/textView_testo_production"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1"
                                android:text="Prod:"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="@+id/textView_speedT1"
                                app:layout_constraintTop_toBottomOf="@+id/textView_speedT1" />


                            <TextView
                                android:id="@+id/textView_val_production"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="v prod"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView_testo_production"
                                app:layout_constraintStart_toEndOf="@+id/textView_testo_production" />


                            <TextView
                                android:id="@+id/textView_testo_Stitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="36dp"
                                android:layout_weight="1"
                                android:text="Stitch:"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView_testo_production"
                                app:layout_constraintStart_toEndOf="@+id/textView_val_production" />


                            <TextView
                                android:id="@+id/textView_punti_tot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:text="P.tot"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView_testo_Stitch"
                                app:layout_constraintStart_toEndOf="@+id/textView_testo_Stitch" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text=" / "
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView_punti_tot"
                                app:layout_constraintStart_toEndOf="@+id/textView_punti_tot" />

                            <TextView
                                android:id="@+id/textView_punti_parziale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:text="P.Parz"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView_testo_Stitch"
                                app:layout_constraintStart_toEndOf="@+id/textView10" />

                            <Button
                                android:id="@+id/button_step_piu100"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="48dp"
                                android:background="@drawable/tasto_step_piu100"
                                app:layout_constraintEnd_toEndOf="@+id/button_step_piu"
                                app:layout_constraintTop_toBottomOf="@+id/button_step_piu" />

                            <Button
                                android:id="@+id/button_step_meno100"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/tasto_step_meno100"
                                app:layout_constraintStart_toStartOf="@+id/button_step_meno"
                                app:layout_constraintTop_toTopOf="@+id/button_step_piu100" />

                            <Button
                                android:id="@+id/button_reset_spola"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="76dp"
                                android:background="@drawable/ic_spola_reset_yellow"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView_testo_production" />

                            <TextView
                                android:id="@+id/textView_Cnt_spola"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:gravity="center"
                                android:text="00000"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toTopOf="@+id/textSpola_limite"
                                app:layout_constraintStart_toStartOf="@+id/textSpola_limite" />

                            <Button
                                android:id="@+id/button_step_piu"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="240dp"
                                android:layout_marginEnd="84dp"
                                android:background="@drawable/tasto_step_piu"
                                app:layout_constraintEnd_toStartOf="@+id/button_step_meno"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/button_step_meno"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/tasto_step_meno"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/button_step_piu" />

                            <TextView
                                android:id="@+id/textSpola_limite"
                                android:layout_width="100dp"
                                android:layout_height="53dp"
                                android:layout_marginStart="16dp"
                                android:gravity="center"
                                android:text="00000"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="30sp"
                                app:layout_constraintBottom_toBottomOf="@+id/button_reset_spola"
                                app:layout_constraintStart_toEndOf="@+id/button_reset_spola" />

                            <TextView
                                android:id="@+id/text_punti_da_saltare"
                                android:layout_width="72dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="00000"

                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@+id/button_step_meno100"
                                app:layout_constraintHorizontal_bias="0.571"
                                app:layout_constraintStart_toEndOf="@+id/button_step_piu100"
                                app:layout_constraintTop_toTopOf="@+id/button_step_piu100" />

                            <TextView
                                android:id="@+id/textView_errore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginBottom="4dp"
                                android:text="Allarmi:"
                                android:textColor="@color/opaque_red"
                                android:textSize="24sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <SeekBar
                                android:id="@+id/seekBar_speed"
                                android:layout_width="270dp"
                                android:layout_height="53dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView_val_speed" />

                            <TextView
                                android:id="@+id/textView_max_speed_value"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="value"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_disegno_programma"
                            android:layout_width="match_parent"
                            android:layout_height="440dp">

                            <FrameLayout
                                android:id="@+id/FrameLayout"
                                android:layout_width="730dp"
                                android:layout_height="440dp"
                                android:layout_weight="1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_zoom"
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <Button
                                android:id="@+id/btn_All"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/tasto_zoom_all"
                                android:onClick="btn_Center_on_click"
                                app:layout_constraintBottom_toBottomOf="@id/constraint_zoom"
                                app:layout_constraintStart_toStartOf="@id/constraint_zoom" />

                            <Button
                                android:id="@+id/btn_zoomPiu"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/tasto_zoom_piu"
                                android:onClick="btn_ZoomPiu_on_click"
                                app:layout_constraintStart_toEndOf="@+id/btn_All"
                                app:layout_constraintTop_toTopOf="@+id/btn_All" />

                            <Button
                                android:id="@+id/btn_zoomMeno"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/tasto_zoom_meno"
                                android:onClick="btn_ZoomMeno_on_click"
                                app:layout_constraintStart_toEndOf="@+id/btn_zoomPiu"
                                app:layout_constraintTop_toTopOf="@+id/btn_zoomPiu" />

                            <Button
                                android:id="@+id/btn_debug"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/debug"
                                android:onClick="on_click_debug"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/btn_zoomPiu" />

                            <TextView
                                android:id="@+id/textView_programma_in_esecuzione"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Programma in esecuzione:"
                                android:textColor="@color/opaque_red"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toTopOf="@+id/textView_riga_in_esecuzione"
                                app:layout_constraintStart_toStartOf="@+id/textView_riga_in_esecuzione" />

                            <TextView
                                android:id="@+id/textView_riga_in_esecuzione"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Riga in esecuzione:"
                                android:textColor="@color/opaque_red"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toTopOf="@+id/btn_All"
                                app:layout_constraintStart_toStartOf="@+id/btn_All" />

                            <TextView
                                android:id="@+id/textView_cnt_thread"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Cnt Thread:"
                                android:textColor="@color/opaque_red"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toTopOf="@+id/textView_programma_in_esecuzione"
                                app:layout_constraintStart_toStartOf="@+id/btn_All" />

                            <TextView
                                android:id="@+id/textView_cnt_connection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cnt:"
                                android:textColor="@color/opaque_red"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toTopOf="@+id/textView_cnt_thread"
                                app:layout_constraintStart_toStartOf="@+id/btn_All" />

                            <Button
                                android:id="@+id/button_reset_allarm"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/tasto_reset_allarm"
                                android:onClick="on_click_button_reset_allarm"
                                app:layout_constraintBottom_toTopOf="@+id/btn_debug"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border2">

            <Button
                android:id="@+id/button_partenza_automatica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:visibility="gone"
                android:background="@drawable/tasto_partenza_automatica"
                app:layout_constraintStart_toEndOf="@+id/button_aggancio_automatico"
                app:layout_constraintTop_toTopOf="@+id/button_sgancio_automatico" />

            <Button
                android:id="@+id/button_cambio_spola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="184dp"
                android:background="@drawable/tasto_apri_spola"
                app:layout_constraintStart_toEndOf="@+id/button_aggancio_automatico"
                app:layout_constraintTop_toTopOf="@+id/button_sgancio_automatico" />

            <Button
                android:id="@+id/button_test_pinzafilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/tasto_test_pinzafilo"
                app:layout_constraintStart_toEndOf="@+id/button_cambio_spola"
                app:layout_constraintTop_toTopOf="@+id/button_cambio_spola" />

            <Button
                android:id="@+id/btn_pagina_tools"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/tasto_pagina_tools"
                android:onClick="onclickPaginaTools"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_reset"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/tasto_reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_sgancio_automatico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/tasto_sgancio_pallet_fine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_aggancio_automatico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="@drawable/tasto_aggancio_automatico"
                app:layout_constraintStart_toEndOf="@+id/button_sgancio_automatico"
                app:layout_constraintTop_toTopOf="@+id/button_sgancio_automatico" /><![CDATA[

            " />

        ]]>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>