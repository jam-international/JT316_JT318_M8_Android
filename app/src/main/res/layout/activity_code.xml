<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tasto_exit"
        android:onClick="on_click_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/tasto_save"
        android:onClick="on_click_save"
        app:layout_constraintEnd_toStartOf="@+id/button_exit"
        app:layout_constraintTop_toTopOf="@+id/button_exit" />

    <Button
        android:id="@+id/button_op3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/tasto_code_op3"
        android:onClick="on_click_op3"
        app:layout_constraintStart_toEndOf="@+id/button_op2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_rasafilo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="112dp"
        android:onClick="on_click_rasafilo1"
        android:background="@drawable/tasto_code_rasafilo"
        app:layout_constraintStart_toEndOf="@+id/button_op3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/tasto_code_op2"
        android:onClick="on_click_op2"
        app:layout_constraintStart_toEndOf="@+id/button_op1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/tasto_code_op1"
        android:onClick="on_click_op1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_slow"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:textSize="16dp"
        android:text="Slow speed (rpm):"
        app:layout_constraintStart_toStartOf="@+id/button_op1"
        app:layout_constraintTop_toBottomOf="@+id/button_op1" />


    <Button
        android:id="@+id/button_slow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:onClick="on_click_set_slow"
        android:text="press to set"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_slow"
        app:layout_constraintTop_toTopOf="@+id/textView_slow" />

    <View
        android:id="@+id/divider"
        android:layout_width="1278dp"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="366dp" />

</androidx.constraintlayout.widget.ConstraintLayout>